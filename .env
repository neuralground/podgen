# API Key References - actual keys are stored securely
# These values are references/identifiers used to retrieve the actual keys
OPENAI_API_KEY_REF=openai-api
ELEVENLABS_API_KEY_REF=elevenlabs-api

# LLM Settings
# Options: openai, ollama
LLM_PROVIDER=openai
LLM_MODEL=gpt-4o
#LLM_PROVIDER=ollama
#LLM_MODEL=deepseek-r1:70b
LLM_TEMPERATURE=0.7
MAX_TOKENS=2048

# Ollama Settings
OLLAMA_HOST=http://localhost:11434

# TTS Settings
# Options: elevenlabs, openai, coqui, bark, system
TTS_PROVIDER=coqui
TTS_MODEL=XTTS-v2
#TTS_PROVIDER=elevenlabs
#TTS_MODEL=eleven_turbo_v2

# Audio Settings
SAMPLE_RATE=44100
CROSSFADE_DURATION=0.5
OUTPUT_FORMAT=wav

# Paths
OUTPUT_DIR=output
CACHE_DIR=.cache
DATA_DIR=data
MODELS_DIR=models

# Device Settings
DEVICE=mps

# Logging
LOG_LEVEL=DEBUG
LOG_FILE=podgen.log

